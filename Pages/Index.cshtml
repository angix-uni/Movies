@page
@model Movie_App.Pages.Favorites.IndexModel
@{
    ViewData["Title"] = "Home page";
}
<h1 class="text-center">Work in progress</h1>

<ul class="carousel-indicators">
    <li data-target="#slideshow" data-slide-to="0" class="active"></li>
    <li data-target="#slideshow" data-slide-to="1"></li>
    <li data-target="#slideshow" data-slide-to="2"></li>
</ul>

<<div id="slideshow" class="carousel slide" data-ride="carousel" data-interval="3500">
  <div class="carousel-inner">
    <div class="carousel-item active">
            <img class="center" src="~/images/batman.jpg" alt="batman" height="600px" width="450px">
    </div>
    <div class="carousel-item">
            <img class="center" src="~/images/sing.jpg" alt="sing" height="600px" width="450px">
    </div>
    <div class="carousel-item">
            <img class="center" src="~/images/enola.jpg" alt="enola" height="600px" width="450px">
    </div>
  </div>
  <a class="carousel-control-prev" href="#slideshow" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only"/>
  </a>
  <a class="carousel-control-next" href="#slideshow" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only"/>
  </a>
</div>

<h5>Recommended movies</h5>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Favorites[0].Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Favorites[0].Genre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Favorites[0].Rating)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Favorites)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Genre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Rating)
                </td>
            </tr>
        }
    </tbody>
</table>

<footer>
    <a href="https://github.com/angix-uni" class="fa fa-facebook"></a>
    <a href="https://github.com/angix-uni" class="fa fa-twitter"></a>
</footer>

<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/js/bootstrap.bundle.min.js"></script>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">